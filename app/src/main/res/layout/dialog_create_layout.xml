<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/linear_bg"
    android:divider="@color/black_overlay"
    android:showDividers="middle"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/title"
            android:text="新建通知"
            android:textSize="20sp"
            android:textColor="@color/black_overlay"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号： "

                android:textSize="18sp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_tv"
                android:layout_centerInParent="true"
                ></TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题："
                android:textSize="18sp"
                ></TextView>
            <EditText
               android:imeOptions="actionNext"
                android:inputType="text"
                android:gravity="center"
                android:layout_marginRight="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ed_title"
                android:theme="@style/MyEditText"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容："
                android:textSize="18sp"
                ></TextView>
            <EditText
                android:imeOptions="actionDone"
                android:inputType="text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ed_text"  android:layout_marginRight="30sp"
                android:theme="@style/MyEditText"
                ></EditText>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优先："
                android:textSize="18sp"
                ></TextView>
            <TextView
                android:id="@+id/tv_imp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                ></TextView>
            <Switch
                android:id="@+id/s_imp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:thumb="@drawable/thumb_bg"
                android:track="@drawable/switch_bg"
                android:layout_height="wrap_content"></Switch>
        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/sure"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/text_click"
            android:layout_weight="1"></TextView>
            <TextView
                android:padding="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"
                android:id="@+id/cancel"
                android:background="@drawable/text_click"
                android:gravity="center"
                android:clickable="true"
                android:layout_weight="1"></TextView>

    </LinearLayout>
</LinearLayout>